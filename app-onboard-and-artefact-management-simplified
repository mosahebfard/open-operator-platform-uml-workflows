@startuml
!pragma teoz true

actor "User/Consumer" as user #PaleGreen

participant "Artefact Manager" as am #Yellow
participant "Artefact Registry #1" as ar1 #Yellow
participant "Artefact Registry #2" as ar2 #Yellow

user -> am: Copy Artefact\n(artifact name, source, destination)
note over am #Gold: Artefact Management API

am -> ar1: Download Artefact
ar1 --> am: Artefact Data

am -> ar2: Upload Artefact
ar2 --> am: Upload Confirmation

am --> user: Copy Artefact Response\n(Success/Failure)
@enduml
